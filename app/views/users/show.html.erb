<h1> Welcome, <%= @user.username %>! </h1>
 
<h4> These are the items you currently have offers for: </h4>

<ul>
<% @user.offers.each do |offer| %>
    <li>
      <%= link_to offer.item.item_name, item_path(offer.item) %> of $<%= offer.offer_price %>0 on <%= offer.created_at.strftime("%b %d, %Y") %>
      <%= button_to "delete", offer, method: :delete%>
      <br>
      <% if offer.item.sold %>
        Congratulations, your offer has been accepted! <br><br>
      <% else %>
      Your offer is pending. Other offers on this item include: <br>
      <% offer.item.offers.each do |item_offer| %>
        $<%= item_offer.offer_price %>0 
        made on 
        <%= item_offer.created_at.strftime("%b %d, %Y") %> 
        <br>
        <% end %>
        <br> <br>
        <% end %>           
    </li>
  <% end %>
</ul>



