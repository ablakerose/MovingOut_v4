<h1> Welcome, <%= @user.username %>! </h1>
 
<h4> These are the items you currently have offers for: </h4>

<ul>
<% @user.offers.each do |offer| %>
    <li>
      <%= link_to offer.item.item_name, item_offers_path(offer.item) %> <%= offer.created_at.strftime("%b %d, %Y") %>
      <br> --you offered: $<%= offer.offer_price %>0 --
      <br>--list price $<%=offer.item.list_price%>0--
      <%= button_to "delete", offer, method: :delete %>
      <br>
    
    </li>
  <% end %>
</ul>



